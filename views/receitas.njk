<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/style.css">

    <title>Foodfy</title>

</head>
<body>
    <header>
        <div class="menu">
            <a id="foodfy" href="/">Foodfy</a>
            <a href="sobre">Sobre</a>
            <a href="receitas"><strong>Receitas</strong></a>
        </div>
    </header>
    
    <section>

        <div class="cards">

            {% for item in items %}

            <div class="card" id="{{ item.id }}">
                <div class="card__image">
                    <img src="{{ item.image }}" alt="{{ item.information }}">
                </div>
                <div class="card__content">
                    <h3 id="h3-do-card_content">Tripo bacon burger</h3>
                </div>
                <div class="card__info">
                    <p id="p-do-card_info">por Jorge Relato</p>
                </div>
            </div>

            {% endfor %}

        </div>
    </section>
    <div class="modal-overlay">

        <div class="modal">
            
            <div id="modal-content">
                <!--<iframe src="" frameborder="0"></iframe>-->
                <div class="modal-img">
                    <img src="" alt="">
                </div>
                <div class="modal-info">
                    <h3>
                        nome da receit
                    </h3>
                    <p>
                        autor da receit
                    </p>
                </div>
            </div>

            <a class="close-modal">
                <i class="material-icons">Fechar modal</i>
            </a>

        </div>

    </div>

    <footer>
        <p>Todos direitos reservados, receitas Foodfy</p>
    </footer>
    <script src="/scripts.js"></script>
</body>
</html>